<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_menu_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_frame"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/blank_Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_add"
            android:layout_width="@dimen/size_button_round"
            android:layout_height="@dimen/size_button_round"
            android:layout_gravity="end"
            android:background="@drawable/button_bg_round"
            android:shadowColor="@color/teal_700"
            android:layout_margin="@dimen/margin_frame_button"
            android:text="@string/button_plus_text"
            android:textSize="@dimen/font_size_button_plus"
            app:backgroundTint="@null" />
    </FrameLayout>

</FrameLayout>