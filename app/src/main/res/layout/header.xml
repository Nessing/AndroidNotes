<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/header_padding"
    android:paddingTop="@dimen/header_padding"
    android:background="@color/teal_200"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_name"
        android:textSize="@dimen/header_name_text_size" />

    <ImageView
        android:layout_width="@dimen/header_image_size"
        android:layout_height="@dimen/header_image_size"
        android:src="@drawable/icon_notes" />

</LinearLayout>